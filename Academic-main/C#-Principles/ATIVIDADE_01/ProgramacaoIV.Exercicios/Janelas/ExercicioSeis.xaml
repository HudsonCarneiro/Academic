<Window x:Class="ProgramacaoIV.Exercicios.Janelas.ExercicioSeis"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            Title="Exercício 06 - Contador de Cliques"
            Height="300" Width="400"
            WindowStartupLocation="CenterScreen"
            Background="WhiteSmoke">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Clique no Botão"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

            <!-- Texto do contador -->
            <TextBlock x:Name="txtContador"
                   Text="Cliques: 0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Grid.Row="1"
                   Margin="0,10,0,10"/>

            <!-- Botão para incrementar o contador -->
            <Button x:Name="btnContador"
                Grid.Row="2"
                Content="Clique Aqui"
                Width="220"
                Height="40"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="btnContador_Click"/>
        </Grid>
    </Window>
