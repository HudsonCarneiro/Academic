<Window x:Class="ProgramacaoIV.Exercicios.Janelas.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramacaoIV.Exercicios.Janelas"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Menu" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" MaxHeight="50"/>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="btnActivity01"            
            Grid.Row="0"
            Margin="10"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"            
            Content="Atividade 01"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
            Click="btnActivity01_Click"/>
        
        <Button
            x:Name="btnActivity02"            
            Grid.Row="1"
            Margin="10"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"            
            Content="Atividade 02"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
            Click="btnActivity02_Click"/>

        <Button
            x:Name="btnActivity03"            
            Grid.Row="2"
            Margin="10"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"            
            Content="Atividade 03"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
            Click="btnActivity03_Click"/>

        <Button
            x:Name="btnActivity04"            
            Grid.Row="3"
            Margin="10"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"            
            Content="Atividade 04"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
            Click="btnActivity04_Click"/>
    </Grid>
</Window>
