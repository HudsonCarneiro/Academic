<Window x:Class="ProgramacaoIV.Exercicios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Atividades"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="WhiteSmoke">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Lista de Exercícios"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Lista de Botões -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnExercicioUm"
                    Width="250"
                    Height="50"
                    Content="Exercício 1 - Soma"
                    ToolTip="Soma de Dois Números (Inteiros)"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,5"
                    Click="btnExercicioUm_Click"/>

            <Button x:Name="btnExercicioDois"
                    Width="250"
                    Height="50"
                    Content="Exercício 2 - Conversor"
                    ToolTip="Conversor de Temperatura"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,5"
                    Click="btnExercicioDois_Click"/>
            
            <Button x:Name="btnExercicioTres"
                 Width="250"
                 Height="50"
                 Content="Exercício 3 - Aniversário"
                 ToolTip="Aniversario"
                 Style="{StaticResource MaterialDesignRaisedButton}"
                 Margin="0,5"
                 Click="btnExercicioTres_Click"/>
            
            <Button x:Name="btnExercicioQuatro"
                 Width="250"
                 Height="50"
                 Content="Exercício 4 - Maior Idade"
                 ToolTip="Calcular maior idade"
                 Style="{StaticResource MaterialDesignRaisedButton}"
                 Margin="0,5"
                 Click="btnExercicioQuatro_Click"/>
            
            <Button x:Name="btnExercicioCinco"
                 Width="250"
                 Height="50"
                 Content="Exercício 5 - Exibir Enum"
                 ToolTip="Exibir Enum"
                 Style="{StaticResource MaterialDesignRaisedButton}"
                 Margin="0,5"
                 Click="btnExercicioCinco_Click"/>

            <Button x:Name="btnExercicioSeis"
                    Width="250"
                    Height="50"
                    Content="Exercício 6 - Contador"
                    ToolTip="Contador de Cliques"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,5"
                    Click="btnExercicioSeis_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
